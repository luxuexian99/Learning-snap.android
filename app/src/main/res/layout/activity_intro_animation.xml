<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context="com.bubei.android.snap.IntroAnimationActivity">

    <ImageView
        android:id="@+id/doorpage_left"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:src="@drawable/doorpage_left" />

    <ImageView
        android:id="@+id/doorpage_right"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"
        android:src="@drawable/doorpage_right" />

</RelativeLayout>
